#!/bin/bash
opt=$1
packages="$2 $3 $4 $5 $6 $7 $8 $9"

case "$opt" in 
     tap) sudo pacman -S $packages ;;
     sync) sudo pacman -Sy $packages;;
     testdb) sudo pacman -Dvvkk $packages;;
     query) sudo pacman -Q $packages;;
     noversion) sudo pacman -Qq $packages;;
     updates) sudo pacman -Qu ;;
     help) echo -e "tap => install\nsync => update dbs\n testdb=> test databases\nquery => query packages\nnoversion => query but with no version show\nupdates => updates for packages"
esac



     


