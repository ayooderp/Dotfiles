#!/bin/bash
clear
source ~/.cache/wal/colors.sh

echo -e "                 System control            "
echo -e "        ------------------------------------ "
echo -e "           1: Update system           "
echo -e "           2: Check updates           "
echo -e "           3: Update AUR packages     "
echo -e "           4: List kernels            "
echo -e "           5: List orphaned packages  "
echo -e "           6: Exit system control     "

read opt

case "$opt" in 

"1")
echo ''
sudo pacman -Syyu 
;;

"2")
echo ''
pacman -Qu
;;

"3")
echo ''
yay -Syu
;;

"4")
echo ''
mhwd-kernel -li
;;

"5")
echo ''
pacman -Qtt
;;

"6")
echo ''
exit
;;

esac

exit 0
