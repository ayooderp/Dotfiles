#!/usr/bin/env bash

get_term_size(){
	read -r LINES COLUMNS < <(stty size)
}

trap 'get_term_size' WINCH
printf '\e[?7h'

clear1(){ printf '\e[2J\e[H' }

get_os(){
	case "$OSTYPE" in
		linux*)
			figlet -f slant Linux | lolcat ;;
		darwin*)
	  	figlet -f slant Darwin | lolcat	;;
			
		*bsd*)
			figlet -f slant BSD	| lolcat
			;;
		solaris*)
			figlet -f slant Solaris | lolcat
		        ;;
		haiku)  
			figlet -f slant Haiku | lolcat
			;;
	esac
}
get_term_size
clear1
get_os
